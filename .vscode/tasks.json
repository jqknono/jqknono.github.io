{
    "tasks": [
        {
            "label": "Build with Jekyll",
            "type": "shell",
            "command": "${workspaceFolder}/script/build.ps1 '${workspaceFolder}'",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "hugo serve",
            "type": "shell",
            "windows": {
                "command": "hugo server --bind :: --baseURL http://r7000.jqknono.com --port 34006 --logLevel info --buildDrafts --buildFuture --disableFastRender --noHTTPCache"
            },
        },
        {
            "label": "hugo serve public",
            "type": "shell",
            "windows": {
                "command": "hugo server --bind :: --baseURL https://blog.techfetch.dev --port 34009 --disableBrowserError --disableLiveReload  --watch false"
            },
            // "runOptions": {
            //     "runOn": "folderOpen"
            // },
        },
        {
            "label": "hugo build",
            "type": "shell",
            "windows": {
                "command": "hugo --baseURL blog.jqknono.com"
            }
        }
    ],
    "version": "2.0.0"
}